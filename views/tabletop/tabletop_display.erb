<style type="text/css">
body {
}

h2{
  width: 50%;
  height: 60px;
  margin: 0;
  padding: 0;
  display: inline;
}
</style>

<div style="text-align:justify;padding-top: 2rem;">
  <p style="float:left"><img src="/images/LogoMakr_3qeKYo.jpg"/></p>
  <div class="boxed"	style="padding-top: 2rem;  padding-left: 40rem;text-align:justify">
		<% @tabletops.each do |tabletop| %>
			<!-- Display every tabletop game available -->
					<% if tabletop.name == "Monopoly"%>
				      <h2 style="font-family:times;color:red"><%= tabletop.name %></h2>
    					<% if tabletop.version == "Original" %>
    						<h2 style="font-family:times;color:red"><%= tabletop.version %></h2>
    						<form action="/monopoly_Original_form" method="post">
    						<p style="font-family:times;color:black">Number of Players:  <input type="text" name="number_of_players">
    						   <button type="Submit" name = "" Value = "monopoly_Original_form" class="btn btn-outline-primary">Submit</button>
                </p>
                </form>
    					<% elsif tabletop.version == "Cheater's Edition" %>
    						<h2 style="font-family:times;color:red"><%= tabletop.version %></h2>
    						<form action = "/monopoly_cheaters" method= "post">
    						<p style="font-family:times;color:black">Number of Players:  <input type="text" name="number_of_players">
    						      <button type="Submit" name = "" Value = "monopoly_cheaters" class="btn btn-outline-primary">Submit</button>
               </p>
                </form>
    					<% elsif tabletop.version == "Gamers" %>
    						<h2 style="font-family:times;color:red"><%= tabletop.version %></h2>
    						<form action = "/monopoly_Gamers" method= "post">
    						<p style="font-family:times;color:black">Number of Players:  <input type="text" name="number_of_players">
    						   <button type="Submit" name = "" Value = "monopoly_Gamers" class="btn btn-outline-primary">Submit</button>
                </p>
                </form>
    					<% end %>
          <% end %>
          <% if tabletop.name == "Lost Patrol" %>
            <h2 style="font-family:times;color:red"><%= tabletop.name %></h2>
            <% if tabletop.version == "Original" %>
              <h2 style="font-family:times;color:red"><%= tabletop.version %></h2>
              <form action = "/lost_patrol_original" method = "post">
              <p style="font-family: times; color:black">
                <button type="Submit" name = "" Value = "lost_patrol_original" class="btn btn-outline-primary">++Proceed++</button>
              </p>
              </form>
            <% end %>
          <% end %>
			<!-- Display .png of tabletop game -->
		<% end %>
	</div>
	</div>
